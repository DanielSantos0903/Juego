<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juego Clasico"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#050B11"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#050B11"
        android:text="Piedra Papel y Tijera"
        android:layout_marginVertical="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Nuevo Jugador"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="80dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Juego"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="215dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Puntajes"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Programación de Dispositivos Móviles"
        android:layout_marginVertical="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:textColor="#050B11"/>



</LinearLayout>